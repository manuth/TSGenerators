{
  "name": "@manuth/generator-my-ts-project",
  "version": "3.0.10",
  "description": "Generates TypeScript-Projects with custom additions",
  "author": "Manuel Thalmann <m@nuth.ch>",
  "license": "MIT",
  "keywords": [
    "yo",
    "yeoman-generator",
    "Generator",
    "Custom",
    "manuth",
    "TypeScript"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "homepage": "https://github.com/manuth/TSProjectGenerator/tree/main/packages/generator-my-ts-project#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manuth/TSProjectGenerator.git",
    "directory": "packages/generator-my-ts-project"
  },
  "bugs": {
    "url": "https://github.com/manuth/TSProjectGenerator/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npm run copy-files && npm run compile",
    "copy-files": "cd ../.. && npm run copy-files",
    "compile": "tsc -b tsconfig.build.json",
    "watch-compile": "npm run compile -- --watch",
    "rebuild": "npm run clean && npm run build",
    "watch": "concurrently --raw \"npm run copy-files -- -- --watch | shusher\" \"npm run watch-compile\"",
    "clean": "npm run compile -- --clean && rimraf ./lib",
    "lint-base": "eslint --max-warnings 0 --ignore-pattern \"!.eslintrc.js\"",
    "lint": "npm run lint-base -- --ext .js,.jsx,.ts,.tsx ./src .eslintrc.js",
    "lint-ide": "npm run lint || exit 0",
    "test": "mocha",
    "patchTypeScript": "ts-patch install && ts-patch --persist"
  },
  "dependencies": {
    "@manuth/extended-yo-generator": "^11.0.5",
    "@manuth/generator-ts-project": "^3.0.10",
    "@manuth/package-json-editor": "2.2.3",
    "comment-json": "^4.1.1",
    "detect-newline": "^3.1.0",
    "eol": "^0.9.1",
    "upath": "^2.0.1",
    "yaml": "^1.10.2"
  },
  "devDependencies": {
    "@manuth/eslint-plugin-typescript": "^3.2.5",
    "@manuth/extended-yo-generator-test": "^11.0.5",
    "@manuth/generator-ts-project-test": "^3.0.10",
    "@manuth/temp-files": "^2.0.7",
    "@types/dedent": "^0.7.0",
    "@types/fs-extra": "^9.0.12",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.7.10",
    "@types/ts-nameof": "^4.2.1",
    "@types/yaml": "^1.9.7",
    "concurrently": "^6.2.1",
    "dedent": "^0.7.0",
    "eslint": "^7.32.0",
    "fs-extra": "^10.0.0",
    "mocha": "^9.1.1",
    "rimraf": "^3.0.2",
    "shusher": "^0.1.1",
    "ts-nameof": "^5.0.0",
    "ts-node": "^10.2.1",
    "ts-patch": "^1.4.4",
    "types-tsconfig": "^1.2.1",
    "typescript": "^4.4.2",
    "yo": "^4.3.0"
  }
}
