{
  "name": "ts-project-generator",
  "private": true,
  "scripts": {
    "build": "npm run copy-files && npm run compile",
    "copy-files": "gulp CopyFiles",
    "compile": "tsc -b tsconfig.build.json",
    "rebuild": "npm run clean && npm run build",
    "watch": "concurrently --raw \"npm run copy-files -- --watch | shusher\" \"npm run compile -- --watch\"",
    "clean": "npm run compile -- --clean && lerna run clean",
    "lint-base": "eslint --max-warnings 0 --ignore-pattern \"!.eslintrc.js\"",
    "lint-local": "npm run lint-base -- --ext .js,.jsx,.ts,.tsx ./scripts .eslintrc.js gulpfile.ts ./gulp",
    "lint-local-ide": "npm run lint-local || exit 0",
    "lint": "npm run lint-local && lerna run lint",
    "lint-ide": "npm run lint-local-ide && lerna run lint-ide",
    "test": "lerna run test",
    "version": "ts-node ./scripts/bumpVersion.ts",
    "prepare": "lerna bootstrap --ignore-scripts && npm run rebuild"
  },
  "devDependencies": {
    "@manuth/eslint-plugin-typescript": "^2.3.9",
    "@types/diff": "^5.0.0",
    "@types/fs-extra": "^9.0.11",
    "@types/git-branch": "^2.0.1",
    "@types/glob": "^7.1.3",
    "@types/gulp": "^4.0.8",
    "@types/gulp-rename": "2.0.0",
    "@types/gulp-replace": "0.0.31",
    "@types/merge-stream": "^1.1.2",
    "@types/minimist": "^1.2.1",
    "@types/node": "^15.0.1",
    "@types/npm-which": "^3.0.0",
    "@types/through2": "^2.0.36",
    "@types/vinyl": "^2.0.4",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/eslint-plugin-tslint": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "concurrently": "^6.0.2",
    "copy-and-watch": "^0.1.5",
    "diff": "^5.0.0",
    "eslint": "^7.25.0",
    "eslint-plugin-deprecation": "^1.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^32.3.3",
    "fs-extra": "^9.1.0",
    "git-branch": "^2.0.1",
    "glob": "^7.1.6",
    "glob-exec": "^0.1.1",
    "gulp": "^4.0.2",
    "gulp-clone": "^2.0.1",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.1.2",
    "lerna": "^4.0.0",
    "merge-stream": "^2.0.0",
    "minimist": "^1.2.5",
    "npm-which": "^3.0.1",
    "shusher": "^0.1.1",
    "through2": "^4.0.2",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "typescript": "^4.2.4",
    "upath": "^2.0.1",
    "vinyl": "^2.2.1"
  },
  "dependencies": {
    "dargs": "^7.0.0"
  }
}
