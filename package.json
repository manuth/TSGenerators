{
  "name": "ts-project-generator",
  "private": true,
  "files": [],
  "workspaces": {
    "packages": [
      "./packages/*"
    ]
  },
  "scripts": {
    "build": "npm run copy-files && npm run compile",
    "copy-files": "gulp CopyFiles",
    "compile": "tsc -b tsconfig.build.json",
    "rebuild": "npm run clean && npm run build",
    "watch": "concurrently --raw \"npm run copy-files -- --watch | shusher\" \"npm run compile -- --watch\"",
    "clean": "npm run compile -- --clean && npm run --workspaces clean",
    "lint-base": "eslint --max-warnings 0 --ignore-pattern \"!.eslintrc.js\"",
    "lint-local": "npm run lint-base -- --ext .js,.jsx,.ts,.tsx ./scripts .eslintrc.js gulpfile.ts ./gulp",
    "lint-local-ide": "npm run lint-local || exit 0",
    "lint": "npm run lint-local && npm run --workspaces lint",
    "lint-ide": "npm run lint-local-ide && npm run --workspaces lint-ide",
    "test": "npm run --workspaces test",
    "version": "ts-node ./scripts/bumpVersion.ts",
    "prepare": "npm run patchTypeScript && npm run rebuild",
    "patchTypeScript": "ts-patch install && ts-patch --persist && npm run --workspaces patchTypeScript"
  },
  "devDependencies": {
    "@manuth/eslint-plugin-typescript": "^3.2.5",
    "@types/diff": "^5.0.1",
    "@types/fs-extra": "^9.0.12",
    "@types/git-branch": "^2.0.1",
    "@types/glob": "^7.1.4",
    "@types/gulp": "^4.0.9",
    "@types/gulp-rename": "^2.0.1",
    "@types/merge-stream": "^1.1.2",
    "@types/minimist": "^1.2.2",
    "@types/node": "^16.7.10",
    "@types/npm-which": "^3.0.1",
    "@types/through2": "^2.0.36",
    "@types/vinyl": "^2.0.5",
    "concurrently": "^6.2.1",
    "copy-and-watch": "^0.1.5",
    "diff": "^5.0.0",
    "eslint": "^7.32.0",
    "fs-extra": "^10.0.0",
    "git-branch": "^2.0.1",
    "glob": "^7.1.7",
    "gulp": "^4.0.2",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.1.3",
    "lerna": "^4.0.0",
    "merge-stream": "^2.0.0",
    "minimist": "^1.2.5",
    "npm-which": "^3.0.1",
    "shusher": "^0.1.1",
    "source-map-support": "^0.5.19",
    "through2": "^4.0.2",
    "ts-nameof": "^5.0.0",
    "ts-node": "^10.2.1",
    "ts-patch": "^1.4.4",
    "typescript": "^4.4.2",
    "upath": "^2.0.1",
    "vinyl": "^2.2.1"
  }
}
